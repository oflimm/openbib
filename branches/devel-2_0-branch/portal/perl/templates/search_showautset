[%# Ausgabekategorien %]
[%- categories = [
                 'P0001',
                 'P0102',
                 'P5000',
                 ];

FOREACH category IN categories;
    FOREACH item IN normset.$category;
    content = item.content;

    SWITCH category;

    CASE "P5000";
         content   = "<a href=\"${config.search_loc}?sessionID=${sessionID};database=${normset.database};searchtitofaut=${normset.id}\">${content}</a>";
    END;
-%]
<tr><td class="category">[% i18nmsg.$category %]</td><td>[% content %]</td></tr>
[%-
   END;
END;
-%]
</table>

