hst       TEXT,
kor       TEXT,
swt       TEXT,
notation  TEXT,
sign      TEXT,
ejahr     SMALLINT,
ejahrft   TEXT,
gtquelle  TEXT,
isbn      TEXT,
issn      TEXT,
artinh    TEXT,
INDEX     (verwidn),
FULLTEXT  (verf),
FULLTEXT  (hst),
FULLTEXT  (kor),
