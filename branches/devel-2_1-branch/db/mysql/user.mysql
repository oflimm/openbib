-------------------------------------------------
--------------- T A B E L L E N -----------------
-------------------------------------------------

DROP TABLE IF EXISTS user;
CREATE TABLE user (
 userid     BIGINT AUTO_INCREMENT PRIMARY KEY,
 lastlogin  DATETIME,

 loginname  TEXT,
 pin        TEXT,

 nachname   TEXT,
 vorname    TEXT,
 strasse    TEXT,
 ort        TEXT,
 plz        INT,
 soll       TEXT,
 gut        TEXT,
 avanz      TEXT,
 branz      TEXT,
 bsanz      TEXT,
 vmanz      TEXT,
 maanz      TEXT,
 vlanz      TEXT,
 sperre     TEXT,
 sperrdatum TEXT,
 gebdatum   TEXT,

 email      TEXT,

 masktype   TEXT,

 INDEX (userid)
)
DEFAULT CHARACTER SET utf8
COLLATE utf8_general_ci
PACK_KEYS=1;

DROP TABLE IF EXISTS usersession;
CREATE TABLE usersession (
  sessionid VARCHAR(255) NOT NULL,
  userid    BIGINT NOT NULL,
  targetid  BIGINT NOT NULL,
  INDEX (sessionid),
  INDEX (userid)
)
DEFAULT CHARACTER SET utf8
COLLATE utf8_general_ci
PACK_KEYS=1;

DROP TABLE IF EXISTS userdbprofile;
CREATE TABLE userdbprofile (
 profilid    BIGINT AUTO_INCREMENT PRIMARY KEY,
 profilename TEXT,
 userid      BIGINT NOT NULL,
 INDEX (profilid),
 INDEX (userid)
)
DEFAULT CHARACTER SET utf8
COLLATE utf8_general_ci
PACK_KEYS=1;

DROP TABLE IF EXISTS profildb;
CREATE TABLE profildb (
 profilid BIGINT NOT NULL,
 dbname   TEXT,
 INDEX (profilid)
)
DEFAULT CHARACTER SET utf8
COLLATE utf8_general_ci
PACK_KEYS=1;

DROP TABLE IF EXISTS fieldchoice;
CREATE TABLE fieldchoice (
 userid    BIGINT NOT NULL,
 fs        BOOL,
 hst       BOOL,
 verf      BOOL,
 kor       BOOL,
 swt       BOOL,
 notation  BOOL,
 isbn      BOOL,
 issn      BOOL,
 sign      BOOL,
 mart      BOOL,
 hststring BOOL,
 gtquelle  BOOL,
 ejahr     BOOL,
 
 INDEX (userid)
)
DEFAULT CHARACTER SET utf8
COLLATE utf8_general_ci
PACK_KEYS=1;

DROP TABLE IF EXISTS logintarget;
CREATE TABLE logintarget (
 targetid    BIGINT AUTO_INCREMENT PRIMARY KEY,
 hostname    TEXT,
 port        TEXT,
 user        TEXT,
 db          TEXT,
 description TEXT,
 type        TEXT,
 INDEX (targetid)
);

DROP TABLE IF EXISTS treffer;
CREATE TABLE treffer (
 userid    BIGINT NOT NULL,
 dbname    TEXT,
 singleidn BIGINT
)
DEFAULT CHARACTER SET utf8
COLLATE utf8_general_ci
PACK_KEYS=1;

DROP TABLE IF EXISTS tags;
CREATE TABLE tags (
 id     INT(11)      NOT NULL auto_increment,
 tag    VARCHAR(255) NOT NULL default '',
 INDEX (id),
 INDEX (tag)
)
DEFAULT CHARACTER SET utf8
COLLATE utf8_general_ci
PACK_KEYS=1;

DROP TABLE IF EXISTS tittag;
CREATE TABLE tittag (
 ttid      INT(11)     NOT NULL auto_increment,
 tagid     INT(11)     NOT NULL default '0',
 titid     INT(11)     NOT NULL default '0',
 titisbn   CHAR(14)    NOT NULL default '',
 titdb     VARCHAR(25) NOT NULL default '',
 loginname TEXT,
 type      INT(3)      NOT NULL default '1',
 PRIMARY KEY  (ttid),
 INDEX (tagid),
 INDEX (titid),
 INDEX (titdb),
 INDEX (type),
 INDEX (loginname(30))
)
DEFAULT CHARACTER SET utf8
COLLATE utf8_general_ci
PACK_KEYS=1;

DROP TABLE IF EXISTS ratings;
CREATE TABLE rating (
 id        INT(11)     NOT NULL auto_increment,
 titid     INT(11)     NOT NULL default '0',
 titisbn   CHAR(14)    NOT NULL default '',
 titdb     VARCHAR(25) NOT NULL default '',
 loginname TEXT,
 rating    INT(3)      NOT NULL default '0',
 PRIMARY KEY  (id),
 INDEX (id),
 INDEX (titid),
 INDEX (titisbn),
 INDEX (titdb),
 INDEX (rating),
 INDEX (loginname(30))
)
DEFAULT CHARACTER SET utf8
COLLATE utf8_general_ci
PACK_KEYS=1;

DROP TABLE IF EXISTS reviews;
CREATE TABLE reviews (
 id        INT(11)     NOT NULL auto_increment,
 titid     INT(11)     NOT NULL default '0',
 titisbn   CHAR(14)    NOT NULL default '',
 titdb     VARCHAR(25) NOT NULL default '',
 loginname TEXT,
 review    MEDIUMTEXT  NOT NULL default '',
 PRIMARY KEY  (id),
 INDEX (id),
 INDEX (titid),
 INDEX (titisbn),
 INDEX (titdb),
 INDEX (loginname(30))
)
DEFAULT CHARACTER SET utf8
COLLATE utf8_general_ci
PACK_KEYS=1;

