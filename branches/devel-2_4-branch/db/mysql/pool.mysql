-------------------------------------------------
-------------- Autorenstammdatei ----------------
-------------------------------------------------

drop table IF EXISTS person;
create table person (
 id            VARCHAR(255) NOT NULL,
 category      SMALLINT  NOT NULL,
 indicator     SMALLINT,
 content       TEXT NOT NULL,
 INDEX         (id),
 INDEX         (category),
 INDEX         (indicator),
 INDEX         (content(10)),
 INDEX         (id,category)
)
DEFAULT CHARACTER SET utf8
COLLATE utf8_general_ci
ENGINE=Innodb
PACK_KEYS=1;
;

drop table IF EXISTS person_ft;
create table person_ft (
 id            VARCHAR(255) NOT NULL,
 category      SMALLINT  NOT NULL,
 content       TEXT NOT NULL,
 INDEX         (id),
 INDEX         (category),
 FULLTEXT      (content)
)
DEFAULT CHARACTER SET utf8
COLLATE utf8_general_ci
ENGINE=MyISAM
PACK_KEYS=1;
;

drop table IF EXISTS person_string;
create table person_string (
 id            VARCHAR(255) NOT NULL,
 category      SMALLINT  NOT NULL,
 content       TEXT ,
 INDEX         (id),
 INDEX         (category),
 INDEX         (content(10))
)
DEFAULT CHARACTER SET utf8
COLLATE utf8_general_ci
ENGINE=Innodb
PACK_KEYS=1;
;

