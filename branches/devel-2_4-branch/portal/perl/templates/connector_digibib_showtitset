[%- FOREACH fncat IN ['T0501' 'T0504' 'T0505' 'T0509' 'T0510' 'T0511' 'T0512'] -%]
[%-   FOREACH part IN sbitem.${fncat}  -%]
[%-     fussnoten.push("<li>${part.content}</li>")-%]
[%-   END -%]
