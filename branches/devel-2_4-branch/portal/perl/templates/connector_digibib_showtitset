<LI> NB=[% utf2iso(item.${'T0405'}.0.content)  # Erscheinungsverlauf %]
[%- FOREACH thisitem IN item.${'T0800'} %]
<LI> TYP=[% utf2iso(thisitem.content)  # Medienart %]
[% END %]
[% IF item.${'T5001'}.0.content %]
<LI> GTV=true
[% END %]
