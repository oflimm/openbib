[% END %]
<LI> LNKDB=http://kug.ub.uni-koeln.de/portal/connector/permalink/[% record.database %]/[% record.id %]/1/kug/index.html
[% IF has_sb %]
[%- sbitem         = sbrecord.get_normdata -%]
[%- sbitemmex      = sbrecord.get_mexdata -%]
