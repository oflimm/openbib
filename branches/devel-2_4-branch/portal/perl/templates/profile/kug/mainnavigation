[% IF config.get('login_active') == 1 %]
[% IF username %]
<a [%- IF active_menu == "login" -%]class="active_menu"[%- END -%]href="[% path_prefix %]/[% config.get('user_loc') %]/[% user.ID %]/preferences.html">[% msg.maketext("Mein KUG") %]</a>
[% ELSE %]
<a [%- IF active_menu == "login" -%]class="active_menu"[%- END -%]href="[% path_prefix %]/[% config.get('login_loc') %].html">[% msg.maketext("Mein KUG") %]</a>
[%- END -%]
&nbsp;::&nbsp;
[% END %]
<a [%- IF active_menu == "info" -%]class="active_menu"[%- END -%]href="[% path_prefix %]/[% config.get('info_loc') %]/help.html">[% msg.maketext("Hilfe") %]</a>&nbsp;::&nbsp;<a [%- IF active_menu == "tutorial" -%]class="active_menu"[%- END -%]href="[% path_prefix %]/[% config.get('info_loc') %]/tutorials.html">[% msg.maketext("Tutorien") %]</a>&nbsp;::&nbsp;<a href="[% path_prefix %]/[% config.get('logout_loc') %]" target="_parent"><b><span class="warning">[% msg.maketext("Sitzung beenden") %]
