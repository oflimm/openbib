<div class="content">
<p />
[%
bklist = [];
FOREACH bk IN bks;
  IF bk.key.length == 2;
    bklist.push(bk.key);
  END ;
END ;

bklist = bklist.sort;

%]

[% FOREACH bk IN bklist %]
[%   IF thisbklist.${bk}.defined %] 
[% bk %] / <a href="[% config.get('info_loc') %]?view=[% view %];view=[% view %];stid=51;category=[% bk %]"">[% bks.${bk} %]</a> ([% thisbklist.${bk}%] Titel)<br/>
[%   END %]
[% END %]
[%# USE dumper; dumper.dump(thisbklist)%]

</div>

<p />

