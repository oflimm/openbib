[% IF statistics.result_exists({ id => 'litlist_usage', type => 12 })%][% IF config.get('litlists') %]   <li><a class="active" href="[% path_prefix %]/[% config.get('handler').resource_cloud_loc.name %]/litlist.html" title="[% msg.maketext("Literaturlisten") %]">[% msg.maketext("Literaturlisten") %]</a></li>[% END %][% END %]
   <li><a                href="[% path_prefix %]/[% config.get('handler').resource_cloud_loc.name %]/searchterm.html" title="[% msg.maketext("Suchbegriffe") %]">[% msg.maketext("Suchbegriffe") %]</a></li>
</ul>

<div class="content">
