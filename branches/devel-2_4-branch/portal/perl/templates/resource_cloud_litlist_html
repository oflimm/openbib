[%# USE dumper;dumper.dump(resultlist)%]
<table width="100%">
<tr><th>[% msg.maketext("Wolke der meist genutzten Literaturlisten") %]</th></tr>
<tr><td class="boxedclear">
<!-- Beginn Tag-Cloud -->
[%
   css_classes = [
        'fast-nicht-genutzt',
        'nicht-sehr-genutzt',
        'etwas-genutzt',
        'genutzt',
        'sehr-viel-genutzt',
        'ultra-genutzt',
        'am-meisten-genutzt',
   ];
%]

[%- IF resultlist.size > 4 -%]
<ol class="cloud">
[%- FOREACH thisitem IN resultlist -%]
[% item       = thisitem.item;
   id         = thisitem.id;
   itemcount  = thisitem.count;
   classnr    = thisitem.class;
   properties = thisitem.properties;
   itemclass  = css_classes.$classnr;
%]
<li class="[% itemclass %]"><span>[% itemcount %] Nutzer verwendeten die Literaturliste</span><a href="[% path_prefix %]/[% config.get('handler').litlists_loc.name %]?&action=show;litlistid=[% id %];do_showlitlist=1" title="[% itemcount %] Nutzer verwendeten  
