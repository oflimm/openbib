[%#-
#######################################################################
#
# Templatename: virtualsearch_showkorindex_item
#
# Typ         : Subtemplate
#
# Aufgabe:
#
# Ausgabe eines *einzelnen* Eintrags im Koerperschaftsindex
#
#######################################################################
-%]
<!-- Beginn Koerperschaft -->

<table border="0" cellspacing="0" cellpadding="0" width="100%" class="table_inactive" onmouseover="this.className='table_active'" onmouseout="this.className='table_inactive'">
<tr><td class="boxedclear" align="left">

<table border="0" cellspacing="0" cellpadding="0" width="100%">
<tr><td align="left" class="headline">&nbsp;<b>[% loop.count %]</b>&nbsp;&nbsp;[% item.content %]</td><td align="right" class="headline">[% item.titcount %]</td></tr>
[%-

request_base = queryoptions.to_cgi_params({exclude = ['profile','page','db','jn']}) -%];
searchprefix  = config.get('searchfield').corporatebodyid.prefix;

-%]
[% FOREACH dbitem IN item.databases %]
[%-

         searchterm    = dbitem.id;
         localurl      = "${path_prefix}/${config.get('handler').search_loc.name}?${request_base};page=1;db=${dbitem.dbname};fs=${searchprefix}:${searchterm}";

-%]
<tr><td align="left"><a href="[% localurl %]">[% dbitem.dbdesc.full %]</a></td><td align="right">[% dbitem.titcount %]</td></tr>
[% END %]
</table>

</td></tr>
</table>
<p />

<!-- Ende Koerperschaft -->
