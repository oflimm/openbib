[%#-
#######################################################################
#
# Templatename: tags_show_usertags
#
# Typ         : Mastertemplate
#
# Aufgabe:
#
# Ausgabe der privaten Tags eines Benutzers
#
#######################################################################
-%]
[% PROCESS common/subtemplate name="std_header" disable_cache_control=1 %]

  <body>

[% PROCESS common/subtemplate name="corporate_banner" %] 

[% PROCESS common/subtemplate name="mainnavigation" active_menu = "login" %] 

<div id="maincontent">

[% PROCESS common/subtemplate name="userprefs_navigation" active="tags" %]

<div class="content">

<ul class="tabbingmenu">
   <li><a class="active" href="[% config.get('tags_loc') %]?show_usertags=1">[% msg.maketext("&Uuml;bersicht") %]</a></li>
   <li><a                href="[% config.get('tags_loc') %]?edit_usertags=1">[% msg.maketext("&Auml;ndern") %]</a></li>
</ul>

<div class="content">
<p/>
<div class="listoptions">
<b>[% msg.maketext("Anzeige:") %]</b>&nbsp; <a href="[% config.get('tags_loc') %]?view=[% view %];show_usertags=1;show_cloud=1"[% IF show_cloud %] class="selected_item"[% END %]>[% msg.maketext("Wolke") %]</a>&nbsp;&#124;&nbsp;<a href="[% config.get('tags_loc') %]?view=[% view %];show_usertags=1;show_cloud=0"[% IF NOT show_cloud %] class="selected_item"[% END %]>[% msg.maketext("Liste") %]</a>
</div>
[%
   private_tags = user.get_private_tags({ loginname => loginname  });

%]
<p />
<table width="100%">
<tr><th>[% msg.maketext("Eigene Tags") %]</th></tr>
<tr><td class="boxedclear">
[%- IF private_tags.size > 0 -%]
[%-   IF show_cloud -%]
<!-- Beginn Tag-Cloud -->
[%
   css_classes = [
        'fast-nicht-genutzt',
        'nicht-sehr-genutzt',
        'etwas-genutzt',
        'genutzt',
        'sehr-viel-genutzt',
        'ultra-genutzt',
        'am-meisten-genutzt',
   ];
%]

<ol class="cloud">
[%-     FOREACH thisitem IN private_tags -%]
[% item      = thisitem.name;
   itemcount = thisitem.count;
   classnr   = thisitem.class;
   itemid    = thisitem.id;
   itemclass = css_classes.$classnr;
%]
<li class="[% itemclass %]"><span>[% itemcount %] Titel sind
verkn&uuml;pft mit dem Tag </span><a href="[% config.get('tags_loc') %]?searchtitoftag=[% itemid %];private_tags=1" class="tag" title="[% itemcount %] Titel sind verkn&uuml;pft mit dem Tag [% item %]">[% item %]</a></li>
[%     END %]
</ol>
[%   ELSE %]
<ul class="subjectlist">
[%-     FOREACH thisitem IN private_tags -%]
[% item      = thisitem.name;
   itemcount = thisitem.count;
   classnr   = thisitem.class;
   itemid    = thisitem.id;
   itemclass = css_classes.$classnr;
%]
<li><a href="[% config.get('tags_loc') %]?searchtitoftag=[% itemid %];private_tags=1">[% item %]</a> ([% itemcount %])</li>
[%     END %]
</ul>
[%   END %]
[% ELSE %]
[% msg.maketext("Bisher haben Sie noch keine Tags vergeben.") %]
[% END %]
</td></tr>
</table>
<p />

</div>
</div>

<p />

[% PROCESS common/subtemplate name="std_footer" %]
