[%- database = record.database -%]
[%- dbdesc   = dbinfo.get('dbnames').${record.database}.full -%]
[%- dburl    = dbinfo.get('urls').${record.database} -%]
[% normset    = record.get_normdata %]
[% mexnormset = record.get_mexdata  %]
[% circset    = record.get_circdata %]


<!-- Title begins here -->
