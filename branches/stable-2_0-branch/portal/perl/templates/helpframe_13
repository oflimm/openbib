[%
  catdb = config.get_infomatrix_of_active_databases(session);
  maxcolumn = config.databasechoice_maxcolumn;
  colspan = config.databasechoice_maxcolumn * 3;
%]
<table>
[%- FOREACH category = config.orgunits -%]
  [%- IF category.nr >= 1 -%]
<tr><td colspan="[% colspan %]">&nbsp;</td></tr>
  [%- END -%]
<tr class="titlerow"><td colspan="[% colspan %]" align="left"><b>[% category.desc %]</b></td></tr>

  [%- FOREACH db = catdb -%]
    [%- IF db.category == category.short -%]
      [%- IF db.column == 1 -%]
<tr><td>&nbsp;</td><td bgcolor="[% db.systemtype %]">&nbsp;</td><td><a href="[% config.helpframe_loc %]?sessionID=[% sessionID %];view=[% view %];database=[% db.db %];stid=14" target="body" title="Schlagworte">[% db.name %]</a></td>
      [%- END -%]
      [%- IF db.column > 1 && db.column < maxcolumn -%]
        [%- IF db.db -%]
<td>&nbsp;</td><td bgcolor="[% db.systemtype %]">&nbsp;</td><td><a href="[% config.helpframe_loc %]?sessionID=[% sessionID %];view=[% view %];database=[% db.db %];stid=14" target="body" title="Schlagworte">[% db.name %]</a></td>
        [%- ELSE -%]
<td>&nbsp;</td><td>&nbsp;</td><td>&nbsp;</td>
        [%- END -%]

      [%- END -%]
      [%- IF db.column == maxcolumn -%]
        [%- IF db.column != 1 -%]

          [%- IF db.db -%]
<td>&nbsp;</td><td bgcolor="[% db.systemtype %]">&nbsp;</td><td><a href="[% config.helpframe_loc %]?sessionID=[% sessionID %];view=[% view %];database=[% db.db %];stid=14" target="body" title="Schlagworte">[% db.name %]</a></td>
          [%- ELSE -%]
<td>&nbsp;</td><td>&nbsp;</td><td>&nbsp;</td>
          [%- END -%]

        [%- END -%]
</tr>
      [%- END -%]
    [%- END -%]
  [%- END -%]
[%- END -%]
</table>
</div>
</div>

