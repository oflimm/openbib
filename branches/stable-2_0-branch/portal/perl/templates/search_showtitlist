<input type="hidden" name="sessionID"  value="[% sessionID %]" />
<input type="hidden" name="searchmode" value="[% searchmode %]" />
<input type="hidden" name="rating"     value="[% rating %]" />
<input type="hidden" name="bookinfo"   value="[% bookinfo %]" />
<input type="hidden" name="hitrange"   value="[% hitrange %]" />
<input type="hidden" name="database"   value="[% database %]" />

<table>
<tr><td class="category">[% msg.maketext("Schlagwortindex dieses Katalogs") %]</td><td>&nbsp;<input type="text" name="swtindex" value="" size="4" maxlength="50" title="[% msg.maketext("Geben Sie hier den Schlagwortanfang ein") %]" />&nbsp;<input type="submit" value="[% msg.maketext("Suchen") %]" />&nbsp;</td></tr>
</table>

</form>
