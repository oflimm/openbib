-%]
[% PROCESS common/subtemplate name="std_header" title = 'Trefferliste'
%]

<body>
<table border="0" cellspacing="0" cellpadding="0" width="100%">
  <tr class="titlerow">
    <td  width="20">&nbsp;</td><td valign="middle" align="left" height="32"><span class="dbdescshort">[% targetdbinfo.dbnames.$database.short %]</span></td>
  </tr>
</table>

<p />
<form method="get" action="[% config.search_loc %]">
[%- FOREACH i IN queryargs -%]
<input type="hidden" name="[% i.key %]" value="[% i.value %]" />
[%- END -%]

<table width="100%">
<tr><th>[% msg.maketext("Optionen") %]</th></tr>
<tr><td class="boxed">
<b>[% msg.maketext("Sortierung") %]:</b>&nbsp;<select name="sorttype"><option value="author">[% msg.maketext("nach Autor") %]</option><option value="title">[% msg.maketext("nach Titel/Z&auml;hlung") %]</option><option value="yearofpub">[% msg.maketext("nach Jahr") %]</option><option value="publisher">[% msg.maketext("nach Verlag") %]</option><option value="signature">[% msg.maketext("nach Signatur") %]</option></select>&nbsp;<select name="sortorder"><option value="up">[% msg.maketext("aufsteigend") %]</option><option value="down">[% msg.maketext("absteigend") %]</option></select>&nbsp;<input type="submit" value="[% msg.maketext("Los") %]" />&nbsp;&nbsp;&nbsp;[% thissortstring %]</td>
</tr>
</table>
<p />
</form>


<form method="get" action="[% config.search_loc %]">
<input type="hidden" name="database"  value="[% database %]" />
<input type="hidden" name="sessionID" value="[% sessionID %]" />

<p />

<!-- Titlelist begins here -->
<table width="100%">
<tr><th>[% msg.maketext("Titelliste") %]</th></tr>
<tr><td class="boxedclear">

<table cellpadding="2">
[% IF offset >= 0 && hitrange > 0 %]
<tr class="titlerow"><td>&nbsp;</td><td>&nbsp;</td><td><span class="rldbase">[% targetdbinfo.dbinfo.$database.full %]</span></td><td align="left" colspan=2><span class="rlhits"><strong>[% itemlist.size %] [% msg.maketext("Treffer") %]</strong></span></td></tr>
<tr><td>&nbsp;</td><td>&nbsp;</td><td>
[%- FOREACH navitem IN nav -%]
<a href="[% navitem.url %]">
[%- IF navitem.active -%]
<b>[ [% navitem.start %]-[% navitem.end %] ]</b>
[%- ELSE -%]
[ [% navitem.start %]-[% navitem.end %] ]
[%- END -%]
</a>&nbsp;
[%- END -%]
<a href="[% baseurl %];hitrange=-1;offset=0">[ Alles ]</a>

</td><td align="left" colspan="2"></td></tr>
[% ELSE %]
<tr class="titlerow"><td>&nbsp;</td><td><span class="rldbase">[% targetdbinfo.dbinfo.$database.full %]</span></td><td align="left" colspan="3"><span class="rlhits"><strong>[% itemlist.size %] [% msg.maketext("Treffer") %]</strong></span></td></tr>
[% END %]

[% listrow = 'listrow1' %]
[% FOREACH item IN itemlist %]

[%# Verfasser konstruieren %]
[%- persons = [] -%]
[%- FOREACH part IN item.${'P0100'}  -%]
[%- persons.push("<a href=\"${config.search_loc}?sessionID=${sessionID};database=${item.database};searchsingleaut=${part.id}\">${part.content}</a>")-%]
[%#- persons.push("${part.content}") -%]
[%- END -%]
[%- FOREACH part IN item.${'P0101'}  -%]
[%- persons.push("<a href=\"${config.search_loc}?sessionID=${sessionID};database=${item.database};searchsingleaut=${part.id}\">${part.content}</a>")-%]
[%#- persons.push("${part.content}") -%]
[%- END -%]
[%- FOREACH part IN item.${'C0200'}  -%]
[%#- persons.push("${part.content}") -%]
[%- persons.push("<a href=\"${config.search_loc}?sessionID=${sessionID};database=${item.database};searchsinglekor=${part.id}\">${part.content}</a>")-%]
[%- END -%]
[%- FOREACH part IN item.${'C0201'}  -%]
[%#- persons.push("${part.content}") -%]
[%- persons.push("<a href=\"${config.search_loc}?sessionID=${sessionID};database=${item.database};searchsinglekor=${part.id}\">${part.content}</a>")-%]
[%- END -%]
[%- person = persons.join(' ; ') -%]

[%# Titel konstruieren %]
[%- title = item.${'T0331'}.first.content -%]
[%- IF item.${'T0310'}.first.content -%]
[%- title = item.${'T0310'}.first.content -%]
[%- END -%]

[%- IF NOT title && item.${'T0089'}.first.content -%]
[%- title = item.${'T0089'}.first.content -%]
[%- END -%]


[%# Verlage konstruieren %]
[%- publisher = item.${'T0412'}.first.content -%]

[%# Ejahr konstruieren %]
[%- yearofpub = item.${'T0425'}.first.content -%]

[%# Signaturen konstruieren %]
[%- signaturen = [] -%]
[%- FOREACH part IN item.${'X0014'} -%]
[%- signaturen.push("${part.content}") -%]
[%- END -%]
[%- signatur = signaturen.join(' ; ') -%]

<tr class="[% listrow %]"><td class="listnr"><input type="checkbox" name="searchmultipletit" value="[% item.id %]" /></td><td colspan="2"><span class="rlauthor">[% person
%]</span><br /><a href="[% config.search_loc %]?sessionID=[%
sessionID %];search=Mehrfachauswahl;searchmode=[% searchmode %];rating=[% rating %];bookinfo=[% bookinfo %];hitrange=;sorttype=[%
sorttype %];database=[% item.${"database"} %];searchsingletit=[% item.id
%]"><strong><span class="rltitle">[% title %]</span></strong></a>, <span
class="rlpublisher">[% publisher %]</span> <span class="rlyearofpub">[% yearofpub %]</span></td><td><a href="[% config.managecollection_loc %]?sessionID=[% sessionID %];action=insert;database=[% item.database %];singleidn=[% item.id %]" target="header"><span class="rlmerken"><a href="[% config.managecollection_loc %]?sessionID=[% sessionID %];action=insert;database=[% item.database %];singleidn=[% item.id %]" target="header" title="[% msg.maketext("In die Merkliste") %]"><img src="/images/openbib/3d-file-blue-clipboard.png" height="29" alt="[% msg.maketext("In die Merkliste") %]" border="0" /></a></span></a></td><td align="left"><b>[% signatur %]</b></td></tr>

[% IF listrow == 'listrow1' %]
[% listrow = 'listrow2' %]
[% ELSE %]
[% listrow = 'listrow1' %]
[% END %]

[% END %]
</table>

<table>
 <tr>
  <td><input type="submit" name="search" value="[% msg.maketext("Mehrfachauswahl") %]" /></td>
 </tr>
</table>
</td></tr>
</table>
<!-- Titlelist ends here -->
</form>

<p />

<hr />

