<td>&nbsp;</td><td bgcolor="[% db.systemtype %]">&nbsp;</td><td><a href="[% config.info_loc %]?sessionID=[% sessionID %];view=[% view %];database=[% db.db %];stid=10" title="Top 20">[% db.name %]</a></td>
        [%- ELSE -%]
<td>&nbsp;</td><td>&nbsp;</td><td>&nbsp;</td>
        [%- END -%]

      [%- END -%]
      [%- IF db.column == maxcolumn -%]
        [%- IF db.column != 1 -%]

          [%- IF db.db -%]
<td>&nbsp;</td><td bgcolor="[% db.systemtype %]">&nbsp;</td><td><a href="[% config.info_loc %]?sessionID=[% sessionID %];view=[% view %];database=[% db.db %];stid=10" title="Top 20">[% db.name %]</a></td>
