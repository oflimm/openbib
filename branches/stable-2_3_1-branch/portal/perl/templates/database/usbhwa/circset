[%
 Aquisition = 0;

 FOREACH mex IN circset ;
    IF mex.AquisitionStatuscode >= 1 ;
       Aquisition = 1;
    END ;
 END ;

 IF normset.${"T5002"}.first.content.defined ;
    Aquisition = 2 ;
 END ;
%]
<p />

<style>
#qr {
        margin-top:-416px;
	position:absolute;
	border:1px solid #ccc;
