drop table IF EXISTS search;
create table search (
verwidn   BIGINT NOT NULL,
verf      TEXT,
hst       TEXT,
kor       TEXT,
swt       TEXT,
notation  TEXT,
sign      TEXT,
ejahr     SMALLINT,
ejahrft   TEXT,
gtquelle  TEXT,
inhalt    TEXT,
isbn      TEXT,
issn      TEXT,
artinh    TEXT,
INDEX     (verwidn),
FULLTEXT  (verf),
FULLTEXT  (hst),
FULLTEXT  (kor),
FULLTEXT  (swt),
FULLTEXT  (notation),
FULLTEXT  (sign),
INDEX     (ejahr),
FULLTEXT  (inhalt),
FULLTEXT  (isbn),
FULLTEXT  (issn),
FULLTEXT  (artinh),
