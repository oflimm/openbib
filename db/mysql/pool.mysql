-------------------------------------------------
-------------- Autorenstammdatei ----------------
-------------------------------------------------

drop table IF EXISTS aut;
create table aut (
 id            BIGINT NOT NULL,
 category      SMALLINT  NOT NULL,
 indicator     SMALLINT,
 content       TEXT NOT NULL,
 INDEX         (id),
 INDEX         (category),
 INDEX         (indicator),
 INDEX         (content(10)),
 INDEX         (id,category)
)
DEFAULT CHARACTER SET utf8
COLLATE utf8_general_ci
PACK_KEYS=1;
;

drop table IF EXISTS aut_ft;
create table aut_ft (
 id            BIGINT  NOT NULL,
 category      SMALLINT  NOT NULL,
 content       TEXT NOT NULL,
 INDEX         (id),
 INDEX         (category),
 FULLTEXT      (content)
)
DEFAULT CHARACTER SET utf8
COLLATE utf8_general_ci
PACK_KEYS=1;
;

drop table IF EXISTS aut_string;
create table aut_string (
 id            BIGINT  NOT NULL,
 category      SMALLINT  NOT NULL,
 content       TEXT ,
 INDEX         (id),
 INDEX         (category),
 INDEX         (content(10))
)
DEFAULT CHARACTER SET utf8
COLLATE utf8_general_ci
PACK_KEYS=1;
;

