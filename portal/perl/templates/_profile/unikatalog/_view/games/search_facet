[%-
    searchterm    = termitem.0;
    searchprefix  = config.get('searchfield').languagestring.prefix;
    filterstring  = "${searchprefix}:${searchterm}";

    spr_mapping = {
        "ara"      => msg.maketext("Arabisch"),
