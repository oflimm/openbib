};

%]

[% IF queryoptions.get_option('searchft') %]

<li class="ob-facet-item d-flex"><a [% IF offcanvas %]data-bs-toggle="offcanvas"[% END %] hx-indicator="#spinner" hx-target="#ob-searchresult_tab_[% current_tab %]" hx-get="[% path_prefix %]/[% config.get('search_loc') %].include?[% facets_query_args_base %]&[% default_cgi_querystring %]&searchft=0" href="[% path_prefix %]/[% config.get('search_loc') %].html?[% facets_query_args_base %]&[% default_cgi_querystring %]&searchft=0"><img style="vertical-align:bottom" src="[% config.get_icon('delete_small',view,sysprofile) %]" alt="[% msg.maketext("Entfernen") %]" /></a>&nbsp;[% msg.maketext("Auch Volltexte durchsuchen") %]</li>

[% END %]

[% IF queryoptions.get_option('showft') %]

<li class="ob-facet-item d-flex"><a [% IF offcanvas %]data-bs-toggle="offcanvas"[% END %] hx-indicator="#spinner" hx-target="#ob-searchresult_tab_[% current_tab %]" hx-get="[% path_prefix %]/[% config.get('search_loc') %].include?[% facets_query_args_base %]&[% default_cgi_querystring %]&showft=0" href="[% path_prefix %]/[% config.get('search_loc') %].html?[% facets_query_args_base %]&[% default_cgi_querystring %]&showft=0"><img style="vertical-align:bottom" src="[% config.get_icon('delete_small',view,sysprofile) %]" alt="[% msg.maketext("Entfernen") %]" /></a>&nbsp;[% msg.maketext("Zeige nur Treffer mit Volltext") %]</li>

[% END %]

[%# USE dumper;dumper.dump(searchquery.get_filter)%]
[%             FOREACH filter IN searchquery.get_filter ;
                   this_filters = [];
                   this_filterstring = "f[${filter.field}]=${filter.term}";
                   FOREACH all_filter IN all_filters;
                       IF all_filter != this_filterstring ;
                           this_filters.push(all_filter);
                       END;
                   END ;
