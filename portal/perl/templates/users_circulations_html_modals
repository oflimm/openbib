<tr><th>[% msg.maketext("Geburtsdatum") %]</th><td>[% userdata.birthdate %]</td></tr>
<tr><th>[% msg.maketext("Anmeldung am") %]</th><td>[% userdata.startdate %]</td></tr>
<tr><th>[% msg.maketext("Ausweis gültig bis") %]</th><td>[% userdata.enddate %]</td></tr>
