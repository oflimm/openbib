[% 
   IF config.litlists ;
      litlists = user.get_litlists();

      IF litlists.size > 0 ;
%]
<form method="get" action="http://[% config.servername %][%config.litlists_loc %]">
<input type="hidden" name="action"          value="manage" />
<input type="hidden" name="titid"           value="[% titidn %]" />
