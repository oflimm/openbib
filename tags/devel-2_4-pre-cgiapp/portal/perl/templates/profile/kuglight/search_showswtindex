[% END %]
[% IF loop.index % 3 == 2 %]
<td><a href="[% config.get('base_loc') %]/[% view %]/[% config.get('handler').search_loc.name %]?search=Mehrfachauswahl;num=[% num %];database=[% database %];searchtitofswt=[% item.id %]">[% item.content %]</a></td><td>[% item.titcount %]</td></tr>
[% END %]

[% END %]

[% IF swtindex.size % 3 == 1 %]
