-------------------------------------------------
-------------- Autorenstammdatei ----------------
-------------------------------------------------

drop table IF EXISTS aut;
create table aut (
 id            INT  NOT NULL,
 category      TEXT NOT NULL,
 indicator     TEXT,
 content       TEXT NOT NULL,
 contentnorm   TEXT,
 contentnormft TEXT,
 INDEX         (id),
 INDEX         (category  (10)),
 INDEX         (indicator (5)),
 INDEX         (contentnorm (10)),
 FULLTEXT      (contentnormft)
)
DEFAULT CHARACTER SET utf8 COLLATE utf8_general_ci;
;

