-------Genereller Connector

drop table IF EXISTS connection;
create table connection (
category   VARCHAR(20),
sourceid   INT         NOT NULL,
sourcetype VARCHAR(20),
targetid   INT         NOT NULL,
targettype VARCHAR(20),
supplement TEXT,
index      (category),
index      (sourceid),
index      (sourcetype),
index      (targetid),
index      (targettype)
)
DEFAULT CHARACTER SET utf8 COLLATE utf8_general_ci;
;


-------------------------------------------------
----------------- Initiale Suche ----------------
-------------------------------------------------

drop table IF EXISTS search;
create table search (
idn       INT UNSIGNED AUTO_INCREMENT NOT NULL PRIMARY KEY,
verwidn   INT NOT NULL,
verf      TEXT,
hst       TEXT,
kor       TEXT,
swt       TEXT,
notation  TEXT,
sign      TEXT,
ejahr     INT,
isbn      TEXT,
issn      TEXT,
artinh    TEXT,
hststring VARCHAR(255),
FULLTEXT  (verf),
FULLTEXT  (hst),
FULLTEXT  (kor),
FULLTEXT  (swt),
FULLTEXT  (notation),
FULLTEXT  (sign),
INDEX     (ejahr),
FULLTEXT  (isbn),
FULLTEXT  (issn),
FULLTEXT  (artinh),
index     (hststring(50)),
FULLTEXT  (verf,hst,kor,swt,notation,sign,isbn,issn)
)
DEFAULT CHARACTER SET utf8 COLLATE utf8_general_ci;
;

