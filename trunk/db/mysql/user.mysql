)
DEFAULT CHARACTER SET utf8
COLLATE utf8_general_ci
PACK_KEYS=1;

DROP TABLE IF EXISTS livesearch;
CREATE TABLE livesearch (
 userid    BIGINT NOT NULL,
 fs        BOOL,
 verf      BOOL,
 swt       BOOL,
 exact     BOOL,

 INDEX (userid)
)
DEFAULT CHARACTER SET utf8
COLLATE utf8_general_ci
PACK_KEYS=1;

DROP TABLE IF EXISTS logintarget;
CREATE TABLE logintarget (
 targetid    BIGINT AUTO_INCREMENT PRIMARY KEY,
 hostname    TEXT,
 port        TEXT,
 user        TEXT,
 db          TEXT,
 description TEXT,
 type        TEXT,
 INDEX (targetid)
);

DROP TABLE IF EXISTS treffer;
CREATE TABLE treffer (
 userid    BIGINT NOT NULL,
 dbname    TEXT,
 singleidn BIGINT
)
DEFAULT CHARACTER SET utf8
COLLATE utf8_general_ci
PACK_KEYS=1;

DROP TABLE IF EXISTS tags;
CREATE TABLE tags (
 id     INT(11)      NOT NULL auto_increment,
 tag    VARCHAR(255) NOT NULL default '',
 INDEX (id),
 INDEX (tag)
)
DEFAULT CHARACTER SET utf8
COLLATE utf8_general_ci
PACK_KEYS=1;

DROP TABLE IF EXISTS tittag;
CREATE TABLE tittag (
 ttid      INT(11)     NOT NULL auto_increment,
 tagid     INT(11)     NOT NULL default '0',
 titid     INT(11)     NOT NULL default '0',
 titisbn   CHAR(14)    NOT NULL default '',
 titdb     VARCHAR(25) NOT NULL default '',
 loginname TEXT,
 type      INT(3)      NOT NULL default '1',
 PRIMARY KEY  (ttid),
 INDEX (tagid),
 INDEX (titid),
 INDEX (titdb),
 INDEX (type),
 INDEX (loginname(30))
)
DEFAULT CHARACTER SET utf8
COLLATE utf8_general_ci
PACK_KEYS=1;

DROP TABLE IF EXISTS reviews;
CREATE TABLE reviews (
 id        INT(11)     NOT NULL auto_increment,
 tstamp    TIMESTAMP,
 titid     INT(11)     NOT NULL default '0',
 titisbn   CHAR(14)    NOT NULL default '',
 titdb     VARCHAR(25) NOT NULL default '',
 loginname TEXT,
 nickname  VARCHAR(30) NOT NULL default '',
 title     VARCHAR(100)NOT NULL default '',
 review    MEDIUMTEXT  NOT NULL default '',
 rating    INT(3)      NOT NULL default '0',
 PRIMARY KEY  (id),
 INDEX (id),
 INDEX (titid),
 INDEX (titisbn),
 INDEX (titdb),
 INDEX (loginname(30))
)
DEFAULT CHARACTER SET utf8
COLLATE utf8_general_ci
PACK_KEYS=1;

DROP TABLE IF EXISTS reviewratings;
CREATE TABLE reviewratings (
 id        INT(11)     NOT NULL auto_increment,
 tstamp    TIMESTAMP,
 reviewid  INT(11)     NOT NULL default '0',
 loginname TEXT,
 rating    INT(3)      NOT NULL default '0',
 PRIMARY KEY  (id),
 INDEX (id),
 INDEX (reviewid),
 INDEX (loginname(30))
)
DEFAULT CHARACTER SET utf8
COLLATE utf8_general_ci
PACK_KEYS=1;

DROP TABLE IF EXISTS litlists;
CREATE TABLE litlists (
 id        INT(11)     NOT NULL auto_increment,
 tstamp    TIMESTAMP,
 userid    INT(11)     NOT NULL,
 title     TEXT        NOT NULL,
 type      INT(3)      NOT NULL default '1',
 PRIMARY KEY  (id),
 INDEX (id),
 INDEX (userid),
 INDEX (title(30)),
 INDEX (type)
)
DEFAULT CHARACTER SET utf8
COLLATE utf8_general_ci
PACK_KEYS=1;

DROP TABLE IF EXISTS litlistitems;
CREATE TABLE litlistitems (
 litlistid INT(11)     NOT NULL,
