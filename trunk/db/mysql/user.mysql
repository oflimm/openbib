-------------------------------------------------
--------------- T A B E L L E N -----------------
-------------------------------------------------

DROP TABLE IF EXISTS user;
CREATE TABLE user (
 userid     BIGINT AUTO_INCREMENT PRIMARY KEY,
 lastlogin  DATETIME,

 loginname  TEXT,
 pin        TEXT,

 nachname   TEXT,
 vorname    TEXT,
 strasse    TEXT,
 ort        TEXT,
 plz        INT,
 soll       TEXT,
 gut        TEXT,
 avanz      TEXT,
 branz      TEXT,
 bsanz      TEXT,
 vmanz      TEXT,
 maanz      TEXT,
 vlanz      TEXT,
 sperre     TEXT,
 sperrdatum TEXT,
 gebdatum   TEXT,

 email      TEXT,

 masktype             TEXT,
 autocompletiontype   TEXT,

 bibsonomy_user TEXT,
 bibsonomy_key  TEXT,
 bibsonomy_sync TEXT,

 INDEX (userid)
)
DEFAULT CHARACTER SET utf8
COLLATE utf8_general_ci
PACK_KEYS=1;

DROP TABLE IF EXISTS usersession;
CREATE TABLE usersession (
  sessionid VARCHAR(255) NOT NULL,
  userid    BIGINT NOT NULL,
  targetid  BIGINT NOT NULL,
  INDEX (sessionid),
  INDEX (userid)
)
DEFAULT CHARACTER SET utf8
COLLATE utf8_general_ci
PACK_KEYS=1;

DROP TABLE IF EXISTS userdbprofile;
CREATE TABLE userdbprofile (
 profilid    BIGINT AUTO_INCREMENT PRIMARY KEY,
 profilename TEXT,
 userid      BIGINT NOT NULL,
 INDEX (profilid),
 INDEX (userid)
)
DEFAULT CHARACTER SET utf8
COLLATE utf8_general_ci
PACK_KEYS=1;

DROP TABLE IF EXISTS profildb;
CREATE TABLE profildb (
 profilid BIGINT NOT NULL,
 dbname   TEXT,
 INDEX (profilid)
)
DEFAULT CHARACTER SET utf8
COLLATE utf8_general_ci
PACK_KEYS=1;

