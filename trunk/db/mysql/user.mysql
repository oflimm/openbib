CREATE TABLE fieldchoice (
 userid    BIGINT NOT NULL,
 fs        BOOL,
 hst       BOOL,
 verf      BOOL,
 kor       BOOL,
 swt       BOOL,
 notation  BOOL,
 isbn      BOOL,
 issn      BOOL,
 sign      BOOL,
 mart      BOOL,
 hststring BOOL,
 inhalt    BOOL,
 gtquelle  BOOL,
 ejahr     BOOL,
 
 INDEX (userid)
)
DEFAULT CHARACTER SET utf8
COLLATE utf8_general_ci
PACK_KEYS=1;

DROP TABLE IF EXISTS spelling;
CREATE TABLE spelling (
 userid      BIGINT NOT NULL,
 as_you_type BOOL,
 resultlist  BOOL,
 
