[%
 Aquisition = 0;

 FOREACH thiscirculation IN circulation ;
    IF thiscirculation.AquisitionStatuscode >= 1 ;
       Aquisition = 1;
    END ;
 END ;

 IF normset.${"T5002"}.first.content.defined ;
    Aquisition = 2 ;
 END ;

%]
<p />
[%# USE dumper;dumper.dump(dbinfo)%]
[% IF Aquisition == 0 %]
<table class="ym-full">
