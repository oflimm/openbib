[%     pid   = profile.key %]
[%     pdata = profile.value %]
<option value="[% pid %]"[%- IF prevprofile == '${pid}'  && NOT checked_profile -%] selected="selected"[%- checked_profile=1 ; END -%]>[% msg.maketext("Benutzerdefiniert") %]: [% pdata.name %]</option>
[%  END %]
</optgroup>
[% END %]
<optgroup label="[% msg.maketext("Suchradius") %]">
[% IF viewdbs.size == 1 %]  
<option value="[% searchprofileid_of_view %]"[%- IF prevprofile == searchprofileid_of_view && NOT checked_profile -%] selected="selected"[%- checked_profile=1 ; END -%]>[% dbinfo.dbnames.${viewdbs.first}.short %]</option>
[%  FOREACH unit IN config.get_orgunitinfo_overview(sysprofile).all ;
     IF unit.orgunitname == orgunitname %]
      searchprofileid_of_orgunit = config.get_searchprofile_of_orgunit(sysprofile,unit.orgunitname) ;
%]
<option value="[% searchprofileid_of_orgunit %]"[%- IF prevprofile == searchprofileid_of_orgunit && NOT checked_profile -%] selected="selected"[%- checked_profile=1 ; END -%]>[% msg.maketext("Fakult√§t") %]: [% unit.description %]</option>
[%   END;
    END;
   END %]
</optgroup>
<option value="[% searchprofileid_of_view %]"
[%- IF prevprofile == searchprofileid_of_view && NOT checked_profile -%]
 selected="selected"
[%- END -%]
>[% msg.maketext("Alle Kataloge") %]</option>
<optgroup label="[% msg.maketext("Allgemeine Suchprofile") %]">
[% FOREACH unit IN config.get_orgunitinfo_overview(sysprofile).all ;
     searchprofileid_of_orgunit = config.get_searchprofile_of_orgunit(sysprofile,unit.orgunitname) ;
%]
<option value="[% searchprofileid_of_orgunit %]"[%- IF prevprofile == searchprofileid_of_orgunit && NOT checked_profile -%] selected="selected"[%- checked_profile=1 ; END -%]>- [% unit.description %]</option>
[% END %]
</optgroup>
</select>