   drilldown_query_args_base = cgiapp.to_cgi_querystring({ change = {'page' = 1 }, exclude = ['fs','filter']}) ;

   all_filters = [];
       FOREACH filter IN searchquery.get_filter ;
          all_filters.push("filter=${filter.val}");
   END ;
   allfilterstring = ";${all_filters.join(';')}";
%]

