<link rel="alternate" type="application/rdf+xml" title="RDF Representation" href="http://[% servername %][% path_prefix %]/[% config.get('title_loc') %]/database/[%- record.database -%]/id/[%- record.id -%].rdf"/>
<link rel="alternate" type="application/json" title="JSON Representation" href="http://[% servername %][% path_prefix %]/[% config.get('title_loc') %]/database/[%- record.database -%]/id/[%- record.id -%].json"/>
[% END %]
