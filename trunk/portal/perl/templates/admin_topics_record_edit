      classification_selected.${classification} = 1;
   END;
%]
[% FOREACH lcc IN lcclist %]
<option value="[% lcc.classification %]" [% IF classification_selected.${lcc.classification}  %]selected="selected"[% END %]>[% IF lcc.classification.length < 2 %]<b>[% lcc.classification %] [% lcc.desc %]</b>[% ELSE %][% lcc.classification %] [% lcc.desc %][% END %]</option>
[% END %]
</select>

</div>

[%# USE dumper;dumper.dump(classification_selected)%]
<div class="ym-fbox-button">
