[% same_url = "${config.search_loc}?sessionID=${sessionID};database=${same_record.database};searchsingletit=${same_record.id}" %]
<li><a href="[% same_url %]">[% dbinfotable.dbnames.${same_record.database}.short %]</a></li>
[% END %]
</ol>
</td></tr>
