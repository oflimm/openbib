     <p>
     [% msg.maketext("In den Kurztrefferlisten, den einzelnen Titeln, der Merkliste
     oder anderen Stellen in OpenBib werden verschiedene bildliche
     Funktionselemente verwendet. Es sind dies:") %]
    </p>
    <table>
     <tr><td align="center"><img src="[% config.get('listofinterest_img') %]" alt="In die Merkliste" border="0" /></td><td>[% msg.maketext("Titel in die Merkliste eintragen") %]</td></tr>

     <tr><td align="center"><img src="[% config.get('mail_img') %]" alt="Als Mail verschicken" border="0" /></td><td>[% msg.maketext("Titel(liste) als Mail verschicken") %]</td></tr>
     <tr><td align="center"><img src="[% config.get('save_img') %]" alt="Abspeichern" border="0" /></td><td>[% msg.maketext("Titel(liste) abspeichern") %]</td></tr>   
     <tr><td align="center"><img src="[% config.get('print_img') %]" alt="Ausdrucken" border="0" /></td><td>[% msg.maketext("Titel(liste) ausdrucken, bzw. in einer Druckansicht darstellen") %]</td></tr>   
     <tr><td align="center"><img src="[% config.get('rssfeed_img') %]"  alt="RSS-Feed" border="0" /></td><td>[% msg.maketext("RSS-Feed") %]</td></tr>   
     <tr><td align="center"><img src="[% config.get('share_img') %]"  alt="An BibSonomy senden" border="0" /></td><td>[% msg.maketext("An BibSonomy senden") %]</td></tr>   
     <tr><td align="center"><img src="[% config.get('top20_img') %]"  alt="Top 20" border="0" /></td><td>[% msg.maketext("Anzeige der Top 20 meist aufgerufenen Titel im entsprechenden Katalog") %]</td></tr>   
     <tr><td align="center"><img src="[% config.get('permalink_img') %]" alt="Permanenter Link" /></td><td>[% msg.maketext("Permanenter Link zu diesem Titel") %]</td></tr>
     <tr><td align="center"><img src="[% config.get('info_img') %]" alt="Normdatensatz" /></td><td>[% msg.maketext("Link zum Normdatensatz") %]</td></tr>   
     <tr><td align="center"><img src="[% config.get('help_img') %]" alt="Kontextsensitive Hilfe" /></td><td>[% msg.maketext("Kontextsensitive Hilfe") %]</td></tr>   
     <tr><td align="center"><img src="[% config.get('tutorial_img') %]" alt="Interaktives Tutorium" /></td><td>[% msg.maketext("Interaktives Tutorium") %]</td></tr>
