[%-

similar_records_output = [];

FOREACH similar_record IN similar_records.sort({order = 'asc', type = 'title'}).get_records ;
  item = similar_record.get_fields ;
  item.delete('id','database');

  similar_records_output.push({ fields => item, database => similar_record.database, id => similar_record.id, dbdesc => dbinfo.get('dbnames').${similar_record.database}.short });
END ;

to_json(similar_records_output);


-%]